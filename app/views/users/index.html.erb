<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
    <%= render 'books/list', user: @user,book:@book %>
  </div>
  <div class="col-md-8 offset-md-1">
  <p id="notice"></p>
  <h2>Users</h2>
    <table class="table">
      <thead>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </thead>
      <tboby>
        <% @users.each do |user| %>
       <tr>
         <td>

           <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %>

         </td>
         <td><%= user.name %></td>
         <td><%=link_to"Show",user_path(user.id)%></td>
        <% end %>
        </tr>
      </tboby>
    </table>
  </div>
</div>
</div>

