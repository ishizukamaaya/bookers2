<p id="notice"></p>

      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"100x100" %>

      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th class="profile-name"><%= user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th class="profile-inputIntroduction"><%= user.introduction %></th>
        </tr>

        <tr>
          <th>following</th>
          <td><%= user.follower.count %></td>
        </tr>
        <tr>
          <th>followers</th>
          <td><%= user.followed.count %></td>
        </tr>

       </tbody>
      </table>

      <%= link_to"",edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>


      <% if current_user != user %>
        <% if current_user.following?(user) %>
          <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-success" %>
        <% else %>
          <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class: "btn btn-primary" %>
        <% end %>
       <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: book,local:true do |f| %>

        <div class="form-grop">
          <label for="book_title">Title</label>
          <p><%= f.text_field :title, class:"form-control" %></p>
        </div>
        <div class="form-grop">
          <label for="book_opinion">Opinion</label>
          <p><%= f.text_area :body, class:"form-control" %></p>
        </div>
        <div class="form-grop">
          <%= f.submit "Create Book", class:"btn btn-success" %>
        </div>

      <% end %>





