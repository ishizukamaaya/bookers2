<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

      <table class="table">
       <tbody>
        <tr>
          <th>name</th>
          <th class="profile-name"><%= user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th class="profile-inputIntroduction"><%= user.introduction %></th>
        </tr>

       </tbody>
      </table>
      <div class= "row">
        <a class="btn btn-outline-secondary btn-block" <%= link_to "",edit_user_path(user), class:"fas fa-user-cog" %></a>
        
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book,local:true do |f| %>
      <form action="books"accpt-charset="UTF-8"method="post">
        <div class="form-grop">
          <label for="book_title">Title</label>
          <p><%= f.text_field :title %></p>
        </div>
        <div class="form-grop">
          <label for="book_opinion">Opinion</label>
          <p><%= f.text_area :body %></p>
        </div>
        <div class="form-grop">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
      </form>
      <% end %>

    </div>
  </div>
</div>

